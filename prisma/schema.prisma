generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id              Int               @id @default(autoincrement())
  email           String            @unique
  name            String?
  password        String?
  projects UsersOnProjects[]
  comments Comment[]
}

model Project {
  id              Int               @id @default(autoincrement())
  name            String
  content         String
  users UsersOnProjects[]
  lastModified DateTime @default(now())
  comments Comment[]
}

model UsersOnProjects {
  project    Project @relation(fields: [projectId], references: [id])
  projectId  Int // relation scalar field (used in the `@relation` attribute above)
  user       User    @relation(fields: [userId], references: [id])
  userId     Int // relation scalar field (used in the `@relation` attribute above)
  permission Int

  @@id([projectId, userId])
}

model Comment {
  id  Int @id @default(autoincrement())
  parentId Int? @unique
  parent Comment? @relation("CommentHistory", fields: [parentId], references: [id])
  children Comment? @relation("CommentHistory")
  content String
  leafId Int
  project Project @relation(fields: [projectId], references: [id]) 
  projectId Int
  userId Int
  user User @relation(fields: [userId], references: [id])
}
